---
// src/layouts/Footer.astro
/**
 * Footer Component
 *
 * Site-wide footer with:
 * - Copyright notice
 * - Social media links
 * - Legal links (Privacy Policy, Cookie Policy)
 * - Cookie preferences button (client-side)
 * - Reading preferences button (client-side)
 */
import { siteData } from "@/content/siteData";
import ContentRenderer from "@/components/ContentRenderer/ContentRenderer.astro";
import { query } from "@/utils/query";
import PreferencesLayout from "./PreferencesLayout.astro";
---

<footer class="bg-text text-bg mt-auto">
  <div class="mx-auto">
    <div class="flex flex-col justify-between items-center gap-6 py-4">
      {/* Legal and privacy links */}
      <div class="flex flex-wrap items-center gap-4 text-sm">
        <a
          href="/privacy-policy"
          class="text-bg hover:text-bg transition-colors"
        >
          Privacy Policy
        </a>
        <a
          href="/cookie-policy"
          class="text-bg hover:text-bg transition-colors"
        >
          Cookie Policy
        </a>
        <a
          href="/terms-of-service"
          class="text-bg hover:text-bg transition-colors"
        >
          Terms of Service
        </a>

        {/* CCPA Opt-Out Link */}
        <a href="/privacy-policy#ccpa-rights" class="text-bg hover:text-bg"
          >Do Not Sell My Personal Information</a
        >

        <PreferencesLayout />
      </div>

      {/* Social media icons */}
      <ContentRenderer
        query={query("social-media")}
        variant="SocialMediaVariant"
        size="md"
        alignment="left"
        className="text-bg"
      />

      {/* Copyright notice */}
      <p class="text-bg text-sm">
        &copy; {new Date().getFullYear()}
        {siteData.legalName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
