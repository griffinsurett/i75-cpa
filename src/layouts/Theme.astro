---
// src/layouts/Theme.astro
/**
 * Theme Component - Site Branding and Icons
 * 
 * Handles:
 * - Favicon configuration (multiple sizes and formats)
 * - Apple touch icons
 * - Theme color for mobile browsers
 * - PWA manifest (commented out)
 * 
 * All favicons point to favicon.svg for simplicity.
 * Can be customized to use different images per size.
 */

import "../styles/global.css";
import "../integrations/scroll-animations/styles/animations.css";
---

<!-- Favicons -->
<link rel="shortcut icon" href="/favicons/favicon.ico" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="theme-color" content="var(--color-primary)" />

<!-- Mobile browser configuration -->
<meta name="mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="var(--color-primary)" />

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const rootStyles = getComputedStyle(document.documentElement);
    const primary = rootStyles.getPropertyValue("--color-primary").trim();
    if (primary) {
      document
        .querySelector('meta[name="theme-color"]')
        ?.setAttribute("content", primary);
    }
  });
</script>

<!-- Scroll animations (deferred to avoid blocking initial render) -->
<script>
  // Import observer directly to avoid pulling in React via index barrel exports
  import "@/integrations/scroll-animations/observer";
</script>
