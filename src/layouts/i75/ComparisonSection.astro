---
import MemeImage from "@/components/MemeImage.astro";
import { Image } from "astro:assets";
import StraightArrow from "@/assets/i75/straight-arrow.png";
import ComplexHighway from "@/assets/i75/CPAExamMeme/wrong-road.jpg";
import SimpleRoad from "@/assets/i75/CPAExamMeme/right-road.jpg";
import { course } from "@/content/siteData";

const { id = "comparison", class: className = "" } = Astro.props;

const comparisons = [
  {
    img: ComplexHighway,
    label: `THE ${course} EXAM`,
    alt: `Complex highway interchange representing the difficulty of ${course} exam`,
  },
  {
    img: SimpleRoad,
    label: `THE ${course} EXAM WITH i75`,
    alt: "Simple straight road representing the straightforward path with our course",
  },
];
---

<section id={id} class={`py-8 md:py-20 border-t-3 border-light-primary ${className}`}>
  <div class="relative">
    <div class="flex justify-center inner-section items-start gap-4 p-0">
      {comparisons.map((comparison) => (
        <MemeImage img={comparison.img} label={comparison.label} alt={comparison.alt} class="w-full" />
      ))}
    </div>

    <Image
      src={StraightArrow}
      alt="Straight Arrow"
      class="w-7 h-7 lg:w-11 lg:h-11 absolute left-1/2 -translate-x-1/3 -mt-2 md:-mt-5"
      width={48}
      height={48}
    />
  </div>
</section>
