---
import Heading from "@/components/Heading";
import Button from "@/components/Button/Button";
import BgImage from "@/assets/i75/i75road.jpg";
import { course, siteData } from "@/content/siteData";

const {
  id = "hero",
  class: className = "",
  titleBefore = "Welcome To ",
  titleText = "i75",
  titleAfter = ` The Right Road to Passing the ${course} Exam!`,
  description = siteData.tagline,
  ctaText = siteData.mainCTAText ?? "Get It Now",
  ctaHref = siteData.mainCTAurl ?? "/",
} = Astro.props;
---

<section id={id} class={`relative overflow-visible ${className}`}>
  <div
    class="relative bg-cover bg-center bg-fixed min-h-[70vh] md:min-h-[80vh] xl:min-h-[100vh] flex flex-col items-center justify-center xl:justify-between space-y-4"
    style={`background-image: url("${BgImage.src}");`}
  >
    <div class="absolute inset-0 bg-dark-primary/35"></div>

    <div class="relative w-8/10 z-10 text-center flex justify-center items-center flex-col py-4 md:py-9 lg:py-12 xl:py-18 m-0">
      <Heading
        className="text-light-primary drop-shadow-xl h1"
        before={titleBefore}
        beforeClass="beforeAndAfterHeadingClass"
        text={titleText}
        after={titleAfter}
        afterClass="beforeAndAfterHeadingClass"
      />
      {description && (
        <p class="text-light-primary/90 text-lg md:text-xl max-w-5xl">
          {description}
        </p>
      )}

      <div class="pt-6 md:pt-8 flex justify-center flex-wrap gap-4 md:gap-6">
        <Button
          variant="primary"
          className="h4"
          href={ctaHref}
        >
          {ctaText}
        </Button>
      </div>
    </div>

    <div class="left-1/2 bottom-0 z-50 flex justify-center items-center -mb-[120px]">
      <slot name="parts" />
    </div>
  </div>
</section>
