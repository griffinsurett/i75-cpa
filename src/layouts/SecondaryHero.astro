---
// src/layouts/SecondaryHero.astro
/**
 * Secondary Hero Layout
 *
 * Full-width hero with optimized background media support.
 * Uses BackgroundMedia component for responsive image optimization.
 *
 * Features:
 * - Responsive background images (mobile/tablet/desktop)
 * - Automatic LCP optimization with aboveTheFold
 * - Gradient overlay for text readability
 * - Optional metadata display (date, author, reading time)
 */

import {
  buildHeroBreadcrumbs,
  getAuthorName,
  type BreadcrumbItem,
} from "@/layouts/collections/helpers/layoutHelpers";
import Heading from "@/components/Heading";
import ArrowHeading from "@/components/ArrowHeading.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";

export interface Props {
  title: string;
  description?: string;
  image?: any; // Astro image asset or public path
  publishDate?: Date | string;
  author?: string | { collection: string; id: string };
  readingTime?: number;
  className?: string;
  minHeight?: string;
  breadcrumbs?: BreadcrumbItem[];
  path?: string;
}

const {
  title,
  description,
  image,
  publishDate,
  author,
  readingTime,
  className = "",
  minHeight = "20vh",
  breadcrumbs,
  path,
} = Astro.props;

const resolvedBreadcrumbs = await buildHeroBreadcrumbs({
  breadcrumbs,
  path: path ?? Astro.url.pathname,
});
---

<section class={`relative ${className}`}>
  <div
    class="relative flex items-center justify-center overflow-hidden bg-primary border-3 border-white rounded-xl shadow-2xl"
    style={`min-height: ${minHeight}`}
  >
    {/* Background image removed for highway sign styling */}

    {/* Hero content */}
    <div class="relative container mx-auto p-4 z-10">
      <div class="text-light-primary">
        <!-- {
          resolvedBreadcrumbs.length > 0 && (
            <div class="my-3 text-left">
              <Breadcrumbs
                items={resolvedBreadcrumbs}
                className="text-light-primary/80 justify-start"
              />
            </div>
          )
        } -->
        <div class="text-center">
          <Heading
            tagName="h1"
            className="h1 font-semibold text-light-primary italic uppercase"
            text={title}
          />

          {
            description && (
              <div class="my-5">
                <ArrowHeading
                  variant="secondary"
                  tagName="p"
                  className="text-xl md:text-2xl font-semibold text-light-primary"
                  text={description}
                />
              </div>
            )
          }

          {/* Metadata row with icons */}
          {
            (publishDate || author || readingTime) && (
              <div class="flex flex-wrap justify-center gap-4 md:gap-6 text-sm md:text-base text-light-primary/90">
                {publishDate && (
                  <time
                    datetime={new Date(publishDate).toISOString()}
                    class="flex items-center gap-2"
                  >
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                    {new Date(publishDate).toLocaleDateString()}
                  </time>
                )}

                {author && (
                  <span class="flex items-center gap-2">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                      />
                    </svg>
                    By {getAuthorName(author)}
                  </span>
                )}

                {readingTime && (
                  <span class="flex items-center gap-2">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    {readingTime} min read
                  </span>
                )}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>

  {/* Optional slot for additional content below hero */}
  <slot />
</section>
