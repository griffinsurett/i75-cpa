---
// src/integrations/IntHeadScripts.astro
/**
 * Integration Head Scripts Bundle
 *
 * Consolidates all integration scripts that need to be in the <head>.
 * Import this single component in your BaseLayout head section.
 *
 * Includes:
 * - Google Tag Manager (with Consent Mode v2)
 * - Consent Script (marks consent existence)
 * - Accessibility Script (applies saved preferences before render)
 * - Language Detection Script (detects browser language)
 *
 * Usage in BaseLayout.astro:
 *   <head>
 *     <IntHeadScripts />
 *   </head>
 */

import GoogleTagManager from "@/integrations/analytics/GoogleTagManager.astro";
import ConsentScript from "@/integrations/preferences/consent/core/scripts/ConsentScript.astro";
import AccessibilityScript from "@/integrations/preferences/accessibility/core/scripts/AccessibilityScript.astro";
import LanguageDetectionScript from "@/integrations/preferences/language/core/scripts/LanguageDetectionScript.astro";
---

<!-- Analytics: Google Tag Manager with Consent Mode v2 -->
<GoogleTagManager />

<!-- Consent: Mark existing consent for components -->
<ConsentScript />

<!-- Accessibility: Apply saved preferences before content renders (prevents FOUC) -->
<AccessibilityScript />

<!-- Language: Detect browser language and set preference -->
<LanguageDetectionScript />
