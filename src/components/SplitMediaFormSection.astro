---
// src/components/SplitMediaFormSection.astro
/**
 * SplitMediaFormSection
 * Two-column section with a form/content column and an images column.
 */
import PrimaryMediaBackground from "@/components/PrimaryMediaBackground.astro";

const {
  class: className = "",
  showBackground = true,
} = Astro.props;
---

<section class={`relative py-10 md:py-16 w-full text-light-primary ${className}`}>
  {showBackground && <PrimaryMediaBackground />}

  <div class="relative z-10 inner-section flex flex-col lg:flex-row gap-10 lg:gap-14 items-start">
    <div class="space-y-6 flex-2">
      <slot name="form" />
    </div>
    <div class="flex flex-col flex-1 gap-6 lg:sticky lg:top-40 self-start">
      <slot name="images" />
    </div>
  </div>
</section>
