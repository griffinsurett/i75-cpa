---
// src/components/LoopComponents/GridCard.astro
/**
 * Grid Card Component
 *
 * Simple card for grid layouts with:
 * - Optional image
 * - Title (linked or plain)
 * - Description
 * - Subtle hover effects
 *
 * Generic card used in GridVariant - the default section variant.
 */

export interface Props {
  title: string;
  url?: string;
  description?: string;
  image?: {
    src: string;
    alt: string;
  };
}

const { title, url, description, image } = Astro.props;
---

<article
  class="bg-bg rounded-lg overflow-hidden shadow-md hover:shadow-lg hover:-translate-y-1 transition-all duration-200"
>
  {/* Optional image */}
  {
    image && (
      <img src={image.src} alt={image.alt} class="w-full h-48 object-cover" />
    )
  }

  {/* Card content */}
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">
      {
        url ? (
          <a
            href={url}
            class="text-heading hover:text-primary transition-colors"
          >
            {title}
          </a>
        ) : (
          <span class="text-heading">{title}</span>
        )
      }
    </h3>

    {description && <p class="text-text leading-relaxed">{description}</p>}
  </div>
</article>
