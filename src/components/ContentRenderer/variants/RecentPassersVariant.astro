---
import RecentPassersDisplay from "@/components/RecentPassersDisplay";

const {
  items = [],
  className = "",
  id,
} = Astro.props;

const passers = items.map((item) => ({
  name: item.title,
  part: item.description,
}));
---

<section id={id} class={`relative w-screen h-full bg-gray-900 border-y-4 ${className}`}>
  <div class="absolute inset-0 bg-gray-900 opacity-95"></div>
  <div
    class="absolute inset-0 opacity-20"
    style="background-image: radial-gradient(circle, var(--color-accent) 1px, transparent 1px); background-size: 8px 8px;"
  ></div>

  <div class="relative h-full flex flex-col justify-center items-center w-full space-y-3 py-3">
    <div class="bg-gray-700 text-accent text-sm md:text-base lg:text-lg font-thin tracking-wider uppercase text-center w-full">
      Hear From Those Who Have Recently Passed
    </div>

    <div class="bg-gray-700 text-accent text-lg md:text-xl lg:text-2xl font-thin tracking-wider uppercase text-center w-full">
      <RecentPassersDisplay passers={passers} client:visible />
    </div>

    <div class="bg-gray-700 text-accent text-sm md:text-base lg:text-lg font-thin tracking-wider uppercase text-center w-full">
      The Right Teacher Makes All The Difference
    </div>
  </div>

  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-yellow-500/5 to-transparent"></div>
</section>
