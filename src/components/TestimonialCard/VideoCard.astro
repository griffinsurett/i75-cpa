---
import { Image } from "astro:assets";
import Heading from "@/components/Heading";

const {
  name,
  title,
  avatar,
  videoThumbnail,
  videoUrl,
  orientation = "portrait",
  class: className = "",
} = Astro.props;

const thumbnailSource =
  videoThumbnail && typeof videoThumbnail === "object" && "src" in videoThumbnail
    ? videoThumbnail.src
    : videoThumbnail;
const thumbnailAlt =
  videoThumbnail && typeof videoThumbnail === "object" && "alt" in videoThumbnail
    ? videoThumbnail.alt
    : `${name} video testimonial`;

const avatarSource =
  avatar && typeof avatar === "object" && "src" in avatar ? avatar.src : avatar;
const avatarAlt =
  avatar && typeof avatar === "object" && "alt" in avatar ? avatar.alt : name;

const aspectClass =
  orientation === "landscape"
    ? "aspect-[16/9]"
    : orientation === "square"
    ? "aspect-square"
    : "aspect-[9/16]";
---

<article class={`rounded-2xl overflow-hidden shadow-xl ${className}`}>
  {videoUrl ? (
    <a
      href={videoUrl}
      target="_blank"
      rel="noopener noreferrer"
      class={`relative block ${aspectClass} group`}
      aria-label={`Play testimonial video from ${name}`}
    >
      {thumbnailSource && (
        <Image
          src={thumbnailSource}
          alt={thumbnailAlt}
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      )}

      <div class="absolute inset-0 bg-black/20 flex items-center justify-center group-hover:bg-black/10 transition-colors">
        <div class="w-16 h-16 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-gray-800 ml-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 5v10l8-5-8-5z" />
          </svg>
        </div>
      </div>

      <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-4">
        <div class="flex items-center space-x-3 text-white">
          {avatarSource && (
            <Image
              src={avatarSource}
              alt={avatarAlt || name}
              class="w-10 h-10 rounded-full object-cover"
              loading="lazy"
            />
          )}
          <div class="flex-1">
            <Heading tagName="h4" className="font-bold text-base text-white">
              {name}
            </Heading>
            <p class="text-sm text-white/90">{title}</p>
          </div>
        </div>
      </div>
    </a>
  ) : (
    <div class={`relative ${aspectClass} group`}>
      {thumbnailSource && (
        <Image
          src={thumbnailSource}
          alt={thumbnailAlt}
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      )}
      <div class="absolute inset-0 bg-black/20 flex items-center justify-center group-hover:bg-black/10 transition-colors">
        <div class="w-16 h-16 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-6 h-6 text-gray-800 ml-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M8 5v10l8-5-8-5z" />
          </svg>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent p-4">
        <div class="flex items-center space-x-3 text-white">
          {avatarSource && (
            <Image
              src={avatarSource}
              alt={avatarAlt || name}
              class="w-10 h-10 rounded-full object-cover"
              loading="lazy"
            />
          )}
          <div class="flex-1">
            <Heading tagName="h4" className="font-bold text-base text-white">
              {name}
            </Heading>
            <p class="text-sm text-white/90">{title}</p>
          </div>
        </div>
      </div>
    </div>
  )}
</article>
